datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model verificationToken {
  id        String   @id @default(uuid())
  token     String
  userId    String   @unique
  createdAt DateTime @default(now())

  @@map("verificationTokens")
}
